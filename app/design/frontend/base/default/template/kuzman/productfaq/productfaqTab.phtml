    <?php if(count($faqjCollection)>0):?>
        <h3><?php echo $this->getGroupName($this->getStoreId(), $groups->getGroupId());?></h3>
        <div>
            <?php foreach ($faqjCollection as $faqj): ?>
                <p class ="qlabel"><?php echo $this->__('Question:')?> </p><p class="question"><?php echo $faqj['question'];?></p>
                <p class ="alabel"><?php echo $this->__('Answer:')?> </p><p class="answer"><?php echo $faqj['answer'];?></p>
            <?php endforeach; ?>
        </div><br/><br>
    <?php endif;?>
<?php endforeach;?>
</div>
